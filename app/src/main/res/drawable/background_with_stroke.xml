<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- res/drawable/background_with_stroke.xml -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" /> <!-- Set your desired background color -->
            </shape>
        </item>
        <!-- Stroke around the LinearLayout -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" /> <!-- Transparent to only show stroke -->
                <stroke
                    android:width="2dp" android:color="@color/white" /> <!-- Set your desired stroke color -->
            </shape>
        </item>

</layer-list>