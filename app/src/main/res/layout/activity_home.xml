<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bluebg" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="661dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/more" />

                <ImageView
                    android:id="@+id/goHome"
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REVOLTIX"
                    android:fontFamily="@font/futura_display"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:letterSpacing="0.1"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>


<!--        2nd Linear Layout-->

        <!-- 3rd Linear layout buttons-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="364dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="276dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="172dp"
                android:layout_height="51dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/futura_display"
                android:letterSpacing="0.1"
                android:text="SUBJECTS"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_btn_subjects"
                android:fontFamily="@font/futura_display"
                android:letterSpacing="0.1"
                android:text="Mathematics"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnElect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_btn_subjects"
                android:fontFamily="@font/futura_display"
                android:letterSpacing="0.1"
                android:text="Electronics Engineering"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnGenEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_btn_subjects"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/futura_display"
                android:letterSpacing="0.1"
                android:text="General engineering and applied sciences"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnElectTech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_btn_subjects"
                android:fontFamily="@font/futura_display"
                android:letterSpacing="0.1"
                android:text="Electronics Systems and technologies"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>