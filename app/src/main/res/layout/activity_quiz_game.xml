<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizGame">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="796dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bluebg" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="661dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

<!--                <ImageView-->
<!--                    android:id="@+id/imageView2"-->
<!--                    android:layout_width="48dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    app:srcCompat="@drawable/more" />-->

                <ImageView
                    android:id="@+id/goHome"
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Practice Mode"
                    android:fontFamily="@font/futura_display"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:letterSpacing="0.1"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="58dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_google"
                android:gravity="center"
                android:padding="20dp">

                <TextView
                    android:id="@+id/questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    android:text="..."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp" />


            </LinearLayout>




            <LinearLayout
                android:id="@+id/LayoutImageAppear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/ShowCorrectAns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="..."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ShowCorrectAns2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="..."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:visibility="gone" />

            <!--                <ImageView-->
<!--                    android:id="@+id/imgToShow"-->
<!--                    android:layout_width="268dp"-->
<!--                    android:layout_height="280dp"-->
<!--                    android:src="@drawable/shock"-->
<!--                    android:visibility="gone" />-->

<!--                <ImageView-->
<!--                    android:id="@+id/imgToShowWrong"-->
<!--                    android:layout_width="268dp"-->
<!--                    android:layout_height="280dp"-->
<!--                    android:src="@drawable/cry"-->
<!--                    android:visibility="gone" />-->


                <RadioGroup
                    android:id="@+id/answerRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"> <!-- Set the orientation to vertical -->

                    <RadioButton
                        android:id="@+id/answerOption1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_btn_subjects"
                        android:button="@null"

                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"

                        android:padding="5dp"
                        android:text="..."
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <RadioButton
                        android:id="@+id/answerOption2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_btn_subjects"
                        android:button="@null"

                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"

                        android:padding="5dp"
                        android:text="..."
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <RadioButton
                        android:id="@+id/answerOption3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_btn_subjects"
                        android:button="@null"

                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"

                        android:padding="5dp"
                        android:text="..."
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <RadioButton
                        android:id="@+id/answerOption4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_btn_subjects"
                        android:button="@null"

                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"

                        android:padding="5dp"
                        android:text="..."
                        android:textAlignment="center"
                        android:textSize="17sp" />
                </RadioGroup>


            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp">

                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/futura_display"
                        android:letterSpacing="0.1"
                        android:padding="5dp"
                        android:text="Next"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:visibility="gone" />

                </LinearLayout>



        </LinearLayout>




    </RelativeLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>