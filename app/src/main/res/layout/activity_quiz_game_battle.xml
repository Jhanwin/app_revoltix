<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizGame">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bluebg" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="661dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/more" />

                <ImageView
                    android:id="@+id/goHome"
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REVOLTIX"
                    android:fontFamily="@font/futura_display"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:letterSpacing="0.1"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="661dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/glassmorphism"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:id="@+id/timerTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_display"
                    android:text="@string/emptytext"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/itemTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/futura_display"
                    android:text="@string/emptytext"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/scoreTextView"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_display"
                    android:text="@string/emptytext"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glassmorphism"
                android:gravity="center"
                android:padding="20dp">

                <TextView
                    android:id="@+id/questionsB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_display"
                    android:text="@string/emptytext"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="373dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp">


                <RadioGroup
                    android:id="@+id/answerRadioGroupB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"> <!-- Set the orientation to vertical -->

                    <RadioButton
                        android:id="@+id/answerOption1B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_btn_subjects"
                        android:button="@null"
                        android:fontFamily="@font/futura_display"
                        android:padding="5dp"
                        android:text="@string/emptytext"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <RadioButton
                        android:id="@+id/answerOption2B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_btn_subjects"
                        android:button="@null"
                        android:fontFamily="@font/futura_display"
                        android:padding="5dp"
                        android:text="@string/emptytext"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <RadioButton
                        android:id="@+id/answerOption3B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_btn_subjects"
                        android:button="@null"
                        android:fontFamily="@font/futura_display"
                        android:padding="5dp"
                        android:text="@string/emptytext"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <RadioButton
                        android:id="@+id/answerOption4B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_btn_subjects"
                        android:button="@null"
                        android:fontFamily="@font/futura_display"
                        android:padding="5dp"
                        android:text="@string/emptytext"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </RadioGroup>


            </LinearLayout>

<!--                        <TextView-->
<!--                            android:id="@+id/references"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:fontFamily="@font/futura_display"-->
<!--                            android:text="@string/emptytext"-->
<!--                            android:textAlignment="center"-->
<!--                            android:textColor="@color/white"-->
<!--                            android:textSize="25sp" />-->

        </LinearLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>